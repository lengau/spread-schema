      "examples": [
        "hello-world"
      ],
      "title": "Project",
      "type": "string"
    },
    "path": {
      "description": "The base path to copy to on the remote machine.",
      "format": "path",
      "title": "Path",
      "type": "string"
    },
    "environment": {
      "additionalProperties": {
        "type": "string"
      },
      "description": "Environment variables to set across the entire project.",
      "title": "Environment",
      "type": "object"
    },
    "backends": {
      "additionalProperties": {
        "discriminator": {
          "mapping": {
            "adhoc": "#/$defs/AdhocBackend",
            "google": "#/$defs/GoogleBackend",
            "linode": "#/$defs/LinodeBackend",
            "lxd": "#/$defs/LxdBackend",
            "qemu": "#/$defs/QemuBackend"
          },
          "propertyName": "type"
        },
        "oneOf": [
          {
            "$ref": "#/$defs/LxdBackend"
          },
          {
            "$ref": "#/$defs/QemuBackend"
          },
          {
            "$ref": "#/$defs/GoogleBackend"
          },
          {
            "$ref": "#/$defs/LinodeBackend"
          },
          {
            "$ref": "#/$defs/AdhocBackend"
          }
        ]
      },
      "description": "Backend configuration",
      "title": "Backends",
      "type": "object"
    },
    "suites": {
      "patternProperties": {
        "[^/].*/": {
          "$ref": "#/$defs/Suite"
        }
      },
      "propertyNames": {
        "description": "The relative path to a suite."
      },
      "title": "Suites",
      "type": "object"
    },
    "include": {
      "description": "A list of path globs to send to each worker.",
      "items": {
        "type": "string"
      },
      "title": "Include",
      "type": "array"
    },
    "exclude": {
      "anyOf": [
        {
          "items": {
            "type": "string"
          },
          "type": "array"
        },
        {
          "type": "null"
        }
      ],
      "default": null,
      "description": "A list of path globs to exclude.",
      "title": "Exclude"
    },
    "rename": {
      "anyOf": [
        {
          "items": {
            "type": "string"
          },
          "type": "array"
        },
        {
          "type": "null"
        }
      ],
      "default": null,
      "description": "A list of regex replacements for renaming or moving files.",
      "title": "Rename"
    },
    "warn-timeout": {
      "anyOf": [
        {
          "type": "string"
        },
        {
          "type": "null"
        }
      ],
      "default": null,
      "description": "Default warn timeout for tests. Defaults to 5 minutes. -1 will disable timeout altogether.",
      "examples": [
        "30s",
        "1m30s",
        "10m",
        "1.5h"
      ],
      "title": "Warn-Timeout"
    },
    "kill-timeout": {
      "anyOf": [
        {
          "type": "string"
        },
        {
          "type": "null"
        }
      ],
      "default": null,
      "description": "Default kill timeout for tests. Defaults to 15 minutes. -1 will disable timeout altogether.",
      "examples": [
        "30s",
        "1m30s",
        "10m",
        "1.5h"
      ],
      "title": "Kill-Timeout"
    }
  },
  "required": [
    "project",
    "path",
    "backends",
    "suites"
  ],
