{
  "$defs": {
    "AdhocBackend": {
      "additionalProperties": false,
      "description": "A backend which allows creating machines using custom scripts.\n\nhttps://github.com/canonical/spread?tab=readme-ov-file#adhoc",
      "properties": {
        "prepare": {
          "anyOf": [
            {
              "type": "string"
            },
            {
              "type": "null"
            }
          ],
          "default": null,
          "description": "prepare script. Runs once per worker.",
          "title": "Prepare"
        },
        "restore": {
          "anyOf": [
            {
              "type": "string"
            },
            {
              "type": "null"
            }
          ],
          "default": null,
          "description": "restore script. Runs once per worker.",
          "title": "Restore"
        },
        "prepare-each": {
          "anyOf": [
            {
              "type": "string"
            },
            {
              "type": "null"
            }
          ],
          "default": null,
          "description": "prepare-each script. Runs once per task.",
          "title": "Prepare-Each"
        },
        "restore-each": {
          "anyOf": [
            {
              "type": "string"
            },
            {
              "type": "null"
            }
          ],
          "default": null,
          "description": "restore-each script. Runs once per task.",
          "title": "Restore-Each"
        },
        "systems": {
          "description": "Operating systems and versions that this backend will start.",
          "examples": [
            "fedora-41-64",
            {
              "ubuntu-24.04-64": {
                "workers": 4
              }
            }
          ],
          "items": {
            "anyOf": [
              {
                "type": "string"
              },
              {
                "additionalProperties": {
                  "$ref": "#/$defs/System"
                },
                "type": "object"
              }
            ]
          },
          "title": "Systems",
          "type": "array"
        },
        "type": {
          "const": "adhoc",
          "default": "adhoc",
          "title": "Type",
          "type": "string"
        },
        "allocate": {
          "description": "Allocation script. Runs on the local machine.",
          "title": "Allocate",
          "type": "string"
        },
        "discard": {
          "description": "Discard script. Runs on the local machine.",
          "title": "Discard",
          "type": "string"
        }
      },
      "required": [
        "systems",
        "allocate",
        "discard"
      ],
      "title": "AdhocBackend",
      "type": "object"
    },
